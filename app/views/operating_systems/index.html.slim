scss = stylesheet_link_tag 'operating_systems_index'
/ = javascript_pack_tag 'operating_system_index'
div#inventory
  h1 Operating Systems Library
  - has_os = @operating_systems.present?
  div#content 
    div.d-flex.flex-row.align-items-center
      - if can? :create, OperatingSystem
        = link_to 'Add OS', new_operating_system_path ,class: 'btn btn-dark my-2 align-self'
      p.m-3.fw-bold = "Total rows: #{has_os ? @operating_systems.total_count : 0}"
    - if @operating_systems.any?
      table class='styled-table'
        thead
          th
          th Index
          th Name
        - @operating_systems.each do |operating_system|
          tr
            td.select_box = check_box_tag :operating_system_check_box_id, operating_system.id, false
            td.id = operating_system.id
            td.name = operating_system.name
            - if can? :edit, OperatingSystem
              td.link = link_to 'Edit', edit_operating_system_path(operating_system)
    - else
      p No items found. Please add some inventory.
        Thank you!
    .row.py-2
      .col
        - if can? :destroy, OperatingSystem
          = button_tag 'Delete selected', remote: true, id: 'delete-selected',class: 'btn btn-dark mx-2'
      .col-6 = render partial: 'shared/page_nav', locals: {model: @operating_systems}
      .col
